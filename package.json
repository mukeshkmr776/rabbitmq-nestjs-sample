{
  "name": "rabbitmq-nestjs-sample",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "clean": "rimraf dist/",
    "prebuild": "rimraf dist/",
    "prebuild:app": "rimraf dist/apps/app",
    "prebuild:subscriber": "rimraf dist/apps/subscriber",

    "build": "npm run build:app && npm run build:subscriber",
    "build:app": "nest build app",
    "build:subscriber": "nest build subscriber",

    "start:app": "nest start app",
    "start:subscriber": "nest start subscriber",

    "start:dev:app": "nest start app --watch",
    "start:dev:subscriber": "nest start subscriber --watch",

    "start:debug:app": "nest start app --debug --watch",
    "start:debug:subscriber": "nest start subscriber --debug --watch",

    "start:app:prod": "node dist/apps/app/main",
    "start:subscriber:prod": "node dist/apps/subscriber/main",

    "format": "prettier --write \"apps/**/*.ts\"",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./apps/app/test/jest-e2e.json"
  },
  "dependencies": {
    "@nestjs/common": "^7.6.15",
    "@nestjs/config": "^0.6.3",
    "@nestjs/core": "^7.6.15",
    "@nestjs/microservices": "^7.6.17",
    "@nestjs/platform-express": "^7.6.15",
    "@nestjs/serve-static": "^2.1.4",
    "amqp-connection-manager": "^3.2.2",
    "amqplib": "^0.8.0",
    "dotenv": "^10.0.0",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^6.6.6"
  },
  "devDependencies": {
    "@nestjs/cli": "^7.6.0",
    "@nestjs/schematics": "^7.3.0",
    "@nestjs/testing": "^7.6.15",
    "@types/express": "^4.17.11",
    "@types/jest": "^26.0.22",
    "@types/node": "^14.14.36",
    "@types/supertest": "^2.0.10",
    "@typescript-eslint/eslint-plugin": "^4.19.0",
    "@typescript-eslint/parser": "^4.19.0",
    "eslint": "^7.22.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-prettier": "^3.3.1",
    "jest": "^26.6.3",
    "prettier": "^2.2.1",
    "supertest": "^6.1.3",
    "ts-jest": "^26.5.4",
    "ts-loader": "^8.0.18",
    "ts-node": "^9.1.1",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^4.2.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/apps/"
    ]
  }
}
